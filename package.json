{
  "name": "@jmsalazardev/react-infinite-scroller",
  "version": "2.0.3",
  "type": "module",
  "files": [
    "dist"
  ],
  "description": "Infinite scroll component for React in ES6",
  "main": "dist/InfiniteScroll.js",
  "jsnext:main": "src/InfiniteScroll.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/jmsalazardev/react-infinite-scroller.git"
  },
  "scripts": {
    "build": "mkdirp dist && tsc",
    "prepublish": "npm run build",
    "test": "jest test",
    "lint": "NODE_OPTIONS=\"--require ./scripts/shims/structuredClone.js\" eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\" --fix --max-warnings 0",
    "precommit": "lint-staged",
    "prepare": "npm run build"
  },
  "lint-staged": {
    "{src,test}/*.{js,jsx,ts,tsx}": [
      "npm run lint"
    ]
  },
  "keywords": [
    "infinite",
    "scroll",
    "react"
  ],
  "author": "Dan Bovey <dan@danbovey.uk>",
  "contributors": [
    {
      "name": "Jose Miguel Salazar",
      "email": "jmsalazar.dev@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danbovey/react-infinite-scroller/issues"
  },
  "dependencies": {
    "prop-types": "^15.8.1"
  },
  "peerDependencies": {
    "react": "^0.14.10 || ^15.7.0 || ^16.14.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.11",
    "mkdirp": "^3.0.1",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": "> 18"
  },
  "exports": {
    ".": {
      "import": "./dist/InfiniteScroll.js",
      "require": "./dist/InfiniteScroll.js"
    }
  }
}